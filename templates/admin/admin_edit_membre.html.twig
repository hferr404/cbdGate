{% extends "base.html.twig" %}

{% block title %}

  BACK-OFFICE | MODIFICATION ET GESTION DES MEMBRES

{% endblock %}

{% block body %}

    <h1 class="display-5 col-md-8 text-center my-5 pt-1 bg-dark text-white mx-auto rounded shadow-lg">
    MODIFICATION ET GESTION DES MEMBRES <small class="badge alert-success mb-1 py-0"><strong> {{membreId}}  {{membreName}} </strong> </small></h1>

    {{form_errors(membreForm)}}

    
    {{form_start (membreForm, {'attr' : {'class' : 'col-md-5 mx-auto'} } ) }}

      {{form_row (membreForm.username, {'label' : "'Nom du membre"} ) }}
      {{form_row (membreForm.email, {'label' : "'Email du membre"}) }}
      {{form_row (membreForm.roles, {'label' : false} ) }}
    

      <button type="submit" class="btn btn-primary">MODIFIER</button>

    {{form_end (membreForm)}}  


 {% endblock %}