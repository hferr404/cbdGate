{% extends "base.html.twig" %}

{% block title %}

Détails du produit

{% endblock %}


{% block body %}

  


    <div class="album albumv py-5" >
   

      <div class="row prodd">

        
        <div class="mx-auto col-md-6 proddd">
        <h2 class="titrus text-center mx-auto text-white py-2 rounded shadow-lg">{{produit.titre}}</h2>
          <div class="card cardd shadow-lg mx-auto">
             
              

              {% for message in app.flashes ('success') %}

              <div class=" col-md-4  p-4 rounded mx-auto text-center text-white mb-2 shadow-lg mx-auto">
                  {{message}}</div>
               

              {% endfor %}   
            
             <img class=" mx-auto" style="width: 50vh; height:50vh;" src="{{ asset('images/' ~ produit.image)}}">
             
            <div class="card-body">
              <p class="card-text">
               {{produit.contenu|raw}}
              </p>
              <div class="d-flex justify-content-between align-items-center text-white">
                  {# <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>  #}
                 <small class="text-white">Posté le {{ produit.dateCreation|date("d/m/Y") }} à {{ produit.dateCreation|date("H:i:s") }} dans la classe
                catégorie <strong> {{produit.categories.titre}} Vendu par <a href="{{path('main_shop', {'id' : produit.boutiques.id})}}"> {{ produit.boutiques.titre }} </a></strong></small>  
               </div>
            </div>
          </div>

          <h4 class="partage text-center  text-white my-5 py-1 rounded shadow-sm"> PARATAGEZ VOTRE AVIS </h4>
              <div class="row bg-container bg-light shadow-sm">
                  {% for comment in produit.commentProduits %}
                     <div class="col-md-5">
                          <span class="badge badge-success"> <strong>{{comment.auteur}}</strong> </span>
                          <i class="text-muted">Posté le {{comment.dateCreation|date("d/m/Y")}} à {{comment.dateCreation|date("H:i:s")}}</i>
                     </div>

                     <div class="col-md-8">

                        {{comment.contenu|striptags}} <hr>

                     </div>
                  {% endfor %}
              </div>
                 
                  {{form_start(formComment, { 'attr' : {"class": "col-md-5 mx-auto"} }) }}

            

                      {{form_row(formComment.contenu, { 'attr' : {"placeholder" : "Saisir un commentaire", "rows" : 10},
                                            'label' : "Votre commentaire" }) }}


                      <input class="btn btn-primary" type="submit" 
                      value="POSTER"> 


                   {{form_end(formComment)}}                     

        </div>
       
    </div> 
  </div>
{% endblock %} 
